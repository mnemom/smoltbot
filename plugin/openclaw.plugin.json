{
  "id": "smoltbot",
  "name": "@mnemom/smoltbot",
  "version": "0.1.0",
  "description": "Transparent AI agent tracing - every decision published, nothing hidden",
  "entry": "dist/src/index.js",
  "hooks": "dist/hooks",
  "configSchema": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean",
        "description": "Enable or disable trace collection",
        "default": true
      },
      "batchSize": {
        "type": "number",
        "description": "Number of traces to batch before sending",
        "default": 1
      },
      "timeout": {
        "type": "number",
        "description": "API request timeout in milliseconds",
        "default": 5000
      }
    }
  },
  "uiHints": {
    "enabled": {
      "label": "Enable Tracing"
    },
    "batchSize": {
      "label": "Batch Size"
    },
    "timeout": {
      "label": "Timeout (ms)"
    }
  },
  "env": {
    "SMOLTBOT_ENABLED": "enabled",
    "SMOLTBOT_BATCH_SIZE": "batchSize",
    "SMOLTBOT_TIMEOUT": "timeout"
  },
  "permissions": {
    "network": true,
    "filesystem": ["~/.smoltbot/"]
  },
  "postInstall": "Run 'smoltbot init' to generate your agent ID"
}
